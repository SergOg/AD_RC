<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/strong_pink</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/strong_pink</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
    </style>

    <style name="ButtonTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomText" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomDigit" parent="MyCustomText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.RC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="Theme.RC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>