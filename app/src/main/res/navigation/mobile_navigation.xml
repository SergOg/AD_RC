<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ru.gb.rc.presentation.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_mainFragment_to_editDeviceFragment"
            app:destination="@id/editDeviceFragment"
            app:popUpTo="@id/nav_home">
            <argument
                android:name="id"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_mainFragment_to_pultDeviceFragment"
            app:destination="@id/pultDeviceFragment"
            app:popUpTo="@id/nav_home">
            <argument
                android:name="id"
                app:argType="integer" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/editDeviceFragment"
        android:name="ru.gb.rc.presentation.edit_device.EditDeviceFragment"
        tools:layout="@layout/fragment_edit_device">
        <action
            android:id="@+id/action_editDeviceFragment_to_mainFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/pultDeviceFragment"
        android:name="ru.gb.rc.presentation.pult_device.DevicePultFragment"
        tools:layout="@layout/fragment_device_pult">
        <action
            android:id="@+id/action_pultDeviceFragment_to_mainFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home" />
        <action
            android:id="@+id/action_pultDeviceFragment_to_settingsDeviceFragment"
            app:destination="@id/settingsDeviceFragment"
            app:popUpTo="@id/pultDeviceFragment">
            <argument
                android:name="id"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_pultDeviceFragment_to_photoDeviceFragment"
            app:destination="@id/photoDeviceFragment"
            app:popUpTo="@id/pultDeviceFragment">
            <argument
                android:name="id"
                app:argType="integer" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/photoDeviceFragment"
        android:name="ru.gb.rc.presentation.edit_photo.PhotoFragment"
        tools:layout="@layout/fragment_device_photo">
        <action
            android:id="@+id/action_photoDeviceFragment_to_pultDeviceFragment"
            app:destination="@id/pultDeviceFragment"
            app:popUpTo="@id/pultDeviceFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsDeviceFragment"
        android:name="ru.gb.rc.presentation.settings_device.DeviceSettingsFragment"
        tools:layout="@layout/fragment_device_settings">
        <action
            android:id="@+id/action_settingsDeviceFragment_to_pultDeviceFragment"
            app:destination="@id/pultDeviceFragment"
            app:popUpTo="@id/pultDeviceFragment" />
    </fragment>



    <fragment
        android:id="@+id/nav_settings"
        android:name="ru.gb.rc.presentation.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_support"
        android:name="ru.gb.rc.presentation.support.SupportFragment"
        tools:layout="@layout/fragment_support" />

    <fragment
        android:id="@+id/nav_mode"
        android:name="ru.gb.rc.presentation.mode.ModeFragment"
        tools:layout="@layout/fragment_mode" />

</navigation>